<template>
	<view class="login">
		<a-head :showBack="false" bgColor='#4abdb4'></a-head>
		<!-- <image src="../../static/loginbg.png" mode="aspectFit" class="loginbg"></image> -->
		<view class="content">
			<view class="title">
				验收评价
			</view>
			<view class="name">
				<image src="../../static/user.png" mode=""></image>
				<u-input v-model="username" type="text" :border="false" placeholder="请输入姓名" height="70" />
			</view>
			<view class="phone">
				<image src="../../static/phone.png" mode=""></image>
				<u-input v-model="phone" type="text" :border="false" placeholder="请输入手机号码" height="70" />
			</view>
			<view class="codepart">
				<view class="left">
					<u-input v-model="code" type="number" :border="false" placeholder="请输入验证码" height="70" />
				</view>
				<view class="right">
					<view class="getcode" v-if="timeFlag" @click="getCode()">
						{{codetext}}
					</view>
					<view class="count" v-else>
						<u-count-down ref="uCountDown" @change="timeChange" :timestamp="timestamp" :show-days="false" :show-hours="false"
						 :show-minutes="false" color="#00b2a4"></u-count-down>秒后获取
					</view>
				</view>
			</view>
			<view class="action-part">
				<view class="loginin" @click="login()">
					登录
				</view>
			</view>

		</view>
		<view class="bottom">
			<image src="../../static/copyright.png" mode="" class="copyright"></image>
			<text>成都积盛电子科技有限公司版权所有</text>
		</view>
	</view>
</template>
<script>
	import helper from '@/common/helper.js'
	export default {
		data() {
			return {
				username: '', //名称
				phone: '', //电话号码
				code: '', //验证码
				codetext: '获取验证码', //验证码文字
				timeFlag: true, //倒计时状态
				timestamp: 59, //倒计时秒数
				IMEI: '', //手机标识
				hasLogin: false
			}
		},
		onLoad() {
			// #ifdef APP-PLUS	
			if (plus.device.imei != null && plus.device.imei != '') {
				this.IMEI = plus.device.imei;
			}
			// #endif
		},
		created() {
			//uni.setStorageSync('USER_ID', "0d91c899da654e69ab34c0aa71943fdf");
		},
		methods: {
			//验证码获取
			getCode() {
				if (!this.phone) {
					helper.showToast('请输入手机号码');
					return;
				}
				helper.request(helper.websiteUrl + "v1/getSmsCaptcha", {
					'passwd': this.phone
				}, 'GET', false, (data) => {
					uni.showToast({
						title: data,
						icon: "none"
					});
					this.timeFlag = false;
				})
			},
			//倒计时
			timeChange(timestamp) {
				if (timestamp == 0) {
					this.timeFlag = true;
				}
			},
			//登录
			login() {				
				if (!this.username) {
					helper.showToast('请输入登录名');
					return;
				}
				if (!this.phone) {
					helper.showToast('请输入手机号码');
					return;
				}
				if (!this.code) {
					helper.showToast('请输入验证码');
					return;
				}
				let param = {
					'username': this.username,
					'passwd': this.phone,
					'code': this.code,
					'IMEI': this.IMEI
				};
				helper.request(helper.websiteUrl + 'v1/login', param, 'POST', true, (user) => {

					//同步缓存用户名，密码，头像图片,菜单
				let Time = new Date().getTime();
				uni.setStorageSync('TimeObj', JSON.stringify(Time));//获取登录时间
					uni.setStorageSync('USERNAME', user.USERNAME);
					uni.setStorageSync('PASSWORD', user.PASSWORD);
					uni.setStorageSync('HEAD_IMG', user.HEAD_IMG);
					uni.setStorageSync('hasLogin', true);
					uni.setStorageSync('menuList', JSON.stringify(user.menuList));
					uni.setStorageSync('USER_ID', user.USER_ID);
					uni.setStorageSync('PHONE', user.PHONE);
					uni.setStorageSync('ROLE_ID', user.ROLE_ID);
					uni.setStorageSync('functionid', user.functionid);
					uni.setStorageSync("flag", false);
					uni.setStorageSync("ggflag", false);
					//异步缓存 手机号码，项目ids，角色id，用户是否禁用状态，用户id
					uni.setStorage({
						key: 'PHONE',
						data: user.PHONE
					});

					uni.setStorage({
						key: 'ROLE_ID',
						data: user.ROLE_ID
					});

					uni.setStorage({
						key: 'STATUS',
						data: user.STATUS
					});

					uni.setStorage({
						key: 'USER_ID',
						data: user.USER_ID
					});
					
					//关闭当前页面并跳转到首页

					uni.redirectTo({
						url: '/pages/index/index'
					})

				});
			}

		}
	}
</script>
